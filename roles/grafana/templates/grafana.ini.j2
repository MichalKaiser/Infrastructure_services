[security]
admin_user = {{ grafana_login }}
admin_password = {{ grafana_password }}

[server]
root_url = http://{{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'] }}:{{ hostvars[inventory_hostname].ansible_port + 58 }}/grafana
serve_from_sub_path = true

[dashboards]
default_home_dashboard_path = /etc/grafana/provisioning/dashboards/main.json
