acl cybera { {{ dns_acl }} };

options {
	directory "/var/lib/bind";
	
	forwarders {
	  {{ dns_servers }}
	};

	allow-query {cybera;};
	dnssec-validation no;
};

statistics-channels {
  inet localhost port 8053 allow { localhost; };
};

key "transfer.key" {
	algorithm hmac-sha256;
	secret "{{ dns_transfer_key }}";
};

key "update.key" {
	algorithm hmac-sha256;
	secret "{{ dns_update_key }}";
};
